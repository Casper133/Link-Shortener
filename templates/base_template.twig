<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block page_title %}{% endblock %}</title>
    <link rel="shortcut icon" href="images/favicon.png">
    <link rel="stylesheet" href="styles/common.css">
    <link rel="stylesheet" href="styles/navigation-menu.css">
    {% block additional_stylesheets %}
    {% endblock %}
</head>
<body>

<nav class="nav-menu">
    {% block main_page_menu_button %}
        <a href="main.php">
            <div class="menu-button">
                Main Page
            </div>
        </a>
    {% endblock %}
    {% block reviews_page_menu_button %}
        <a href="reviews.php">
            <div class="menu-button">
                Reviews
            </div>
        </a>
    {% endblock %}
    {% if isUserAuthorized %}
        {% block links_page_menu_button %}
            <a href="links.php">
                <div class="menu-button">
                    Links
                </div>
            </a>
        {% endblock %}
    {% endif %}
    {% if not isUserAuthorized %}
        {% block sign_in_page_menu_button %}
            <a href="sign_in.php">
                <div class="menu-button">
                    Sign In
                </div>
            </a>
        {% endblock %}
    {% endif %}
    {% if not isUserAuthorized %}
        {% block sign_up_page_menu_button %}
            <a href="sign_up.php">
                <div class="menu-button">
                    Sign Up
                </div>
            </a>
        {% endblock %}
    {% endif %}
    {% if isUserAuthorized %}
        {% block logout_page_menu_button %}
            <a href="logout.php">
                <div class="menu-button">
                    Logout
                </div>
            </a>
        {% endblock %}
    {% endif %}
</nav>

<h1 class="page-header">{% block page_header %}{% endblock %}</h1>
<br>
{% block page_content %}
{% endblock %}

</body>
</html>
