{% extends "base_template.twig" %}

{% block page_title %}
    Link Shortener
{% endblock %}

{% block additional_stylesheets %}
    <link rel="stylesheet" href="styles/page-form.css">
    <link rel="stylesheet" href="styles/main-page.css">
{% endblock %}

{% block main_page_menu_button %}
    <a href="main.php">
        <div class="menu-button selected-menu-button">
            Main Page
        </div>
    </a>
{% endblock %}

{% block page_header %}
    Service for shortening links
{% endblock %}

{% block page_content %}
    {% if shortLink is defined %}
        <div class="short-link">
            Shortened link:
            <a class="link" target="_blank" rel="noopener noreferrer" href="{{ shortLink }}">
                {{ shortLink }}
            </a>
        </div>
    {% endif %}
    {% if not shortLink is defined %}
        <form method="post">
            <label class="page-form">
                <input class="form-text-field" name="original_link" placeholder="Enter original link"
                       type="text" autocomplete="off" required>
                <input class="form-button" value="Shorten it!" type="submit">
            </label>
        </form>
    {% endif %}
{% endblock %}
