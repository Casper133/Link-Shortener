{% extends "base_template.twig" %}

{% block page_title %}
    Sign Up
{% endblock %}

{% block additional_stylesheets %}
    <link rel="stylesheet" href="styles/page-form.css">
{% endblock %}

{% block sign_up_page_menu_button %}
    <a href="sign_up.php">
        <div class="menu-button selected-menu-button">
            Sign Up
        </div>
    </a>
{% endblock %}

{% block page_header %}
    Register a new account
{% endblock %}

{% block page_content %}
    <form method="post">
        <label class="page-form">
            <input class="form-text-field" name="email" placeholder="Enter e-mail"
                   type="text" autocomplete="off" required>
            <input class="form-text-field" name="password" placeholder="Enter password"
                   type="password" autocomplete="off" required>
            <input class="form-button" value="Sign Up" type="submit">
        </label>
    </form>
{% endblock %}
